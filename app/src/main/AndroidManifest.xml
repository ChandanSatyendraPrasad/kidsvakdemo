<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kids.vak.cwd">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kidsvakdemo">
        <activity
            android:name=".activity.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ViewDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/title_activity_view_details"/>
        <activity android:name=".activity.PaintActivity"/>
        <activity android:name=".activity.Manager"/>
        <activity android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>